{
    "name": "Find all active Global Administrators",
    "category": "Entra ID - Users & Groups",
    "queryList": [
        {
            "final": true,
            "query": "MATCH p =(n)-[:AZGlobalAdmin]->(:AZTenant) RETURN p",
            "allowCollapse": true
        }
    ]
}
{
    "name": "Find all users with an active Tier-0 Entra role",
    "category": "Entra ID - Users & Groups",
    "queryList": [
        {
            "final": true,
            "query": "MATCH (entra_roles_t0) WHERE (entra_roles_t0.displayname =~ '(?i)_VAR_all-entra-roles-in-t0') MATCH (:AZUser)-[:AZHasRole|AZMemberOf*1..2]->(entra_roles_t0) RETURN p",
            "allowCollapse": true
        }
    ]
}
