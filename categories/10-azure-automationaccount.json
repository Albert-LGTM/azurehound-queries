{
    "name": "Find all principals with a path to an Automation Account that has an MI with an Entra ID role",
    "category": "Azure - Automation Account",
    "queryList": [
        {
            "final": true,
            "query": "MATCH (node) WHERE (node:_VAR_all-security-principals-excluding-built-in) MATCH p=(node)-[r*1..3]->(:AZAutomationAccount)-[:AZManagedIdentity]-(n1)-[:AZHasRole]->(n2) RETURN p",
            "allowCollapse": true
        }
    ]
}
