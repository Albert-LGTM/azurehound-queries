{
  "name": "Find all principals with an abusable permission on MS Graph",
  "category": "Entra ID - Service Principals",
  "queryList": [
      {
          "final": true,
          "query": "MATCH p = (n1)-[r:AZAddOwner|AZAddSecret|AZAppAdmin|AZCloudAppAdmin|AZMGAddOwner|AZMGAddSecret|AZOwns]->(n2:AZServicePrincipal {appdisplayname: \"Microsoft Graph\"}) RETURN p",
          "allowCollapse": true
      }
  ]
}
