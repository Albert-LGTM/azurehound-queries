{
    "name": "Find all SPs with Azure permissions on individual resources",
    "category": "Azure - Service Principals",
    "queryList": [
        {
            "final": true,
            "query": "MATCH (az) WHERE (az:AZVM or az:AZAutomationAccount or az:AZContainerRegistry or az:AZFunctionApp or az:AZLogicApp or az:AZManagedCluster or az:AZVMScaleSet or az:AZWebApp or az:AZKeyVault) MATCH p = (node:AZServicePrincipal {serviceprincipaltype: 'Application'})-[r]->(az) RETURN p",
            "allowCollapse": true
        }
    ]
}
